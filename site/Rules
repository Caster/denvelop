#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The string given to #compile and #route are matching patterns for
#   identifiers--not for paths. Therefore, you can’t match on extension.
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

#
# ---- COMPILE RULES -----------------------------------------------------------
#

compile '/img/*/' do
    if item[:extension] == 'ipe'
        filter :ipe
    end
end

compile '/less/*/' do
    if item.identifier.chop.split('/').last == 'denvelop'
        filter :less
        if item[:yuiCompress]
            filter :yui_compressor, :type => :css
        end
    else
        nil
    end
end

compile '*' do
    if item.binary?
        nil
    else
        filter :erb
        layout 'default'
        if item[:title]
            filter :tidy
        end
    end
end

#
# ---- ROUTING RULES -----------------------------------------------------------
#

route '/img/*/' do
    if item[:extension] == 'ipe'
        item.identifier.chop + '.svg'
    else
        item.identifier.chop + '.' + item[:extension]
    end
end

route '/less/*/' do
    if item.identifier.chop.split('/').last == 'denvelop'
        item.identifier.chop.gsub('less', 'css') + '.css'
    else
        nil
    end
end

route '/items/*/' do
    splitId = item.identifier.chop.split('/')
    joinId = (splitId[2] == default_language ? splitId[3..-1] : splitId[2..-1]).join('/')
    (joinId.length > 0 ? '/' : '') + joinId + '/index.html'
end

route '*' do
    # Write item with identifier /foo/ to /foo/index.html
    item.identifier + 'index.html'
end

#
# ---- LAYOUT RULES ------------------------------------------------------------
#

layout '*', :erb
